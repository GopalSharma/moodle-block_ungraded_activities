{{!
    @template ungraded_activities/activity_listing

    This template renders the each activities of a course which needs manual gradding.

    Example context (json):
    {
        "allactivities": {
            "coursename": "Course Name"
            "activities": [{
                "name": "Activity name",
                "url": http://example.com/mod/assign/view.php?id=6&action=grader&userid=3
            }]
        ]
    }
}}
<ul class="tree">
    {{#allactivities}}
    <li class="parent">
        <details open class="details">
            <summary class="bold">
                <span class="px-1">{{{ coursename }}}</span>
            </summary>
            <ul class="nested-list">
                {{#activities}}
                <li class="nested-item row w-100">
                    <span class="pl-3 col-8 my-auto">{{{ name }}}</span>
                    <span class="col-4 text-right">
                        <a href="{{{url}}}" class="btn btn-primary btn-sm">
                            {{#str}} gradeverb, core {{/str}}
                        </a>
                    </span>
                </li>
                {{/activities}}
            </ul>
        </details>
    </li>
    {{/allactivities}}
    {{^allactivities}}
        {{#str}} no_ungraded, block_ungraded_activities {{/str}}
    {{/allactivities}}
</ul>
